    "roll-types": "api-extractor run && rimraf temp",
    "lint": "eslint --ext .ts src/**",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s --commit-path .",
    "release": "node ../../scripts/release.js"
